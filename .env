# VPN Tunnel Configuration

# Encryption key (256-bit / 32 bytes in hexadecimal)
# Generate a new one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456

# Server Configuration
SERVER_PORT=3000
SERVER_URL=http://localhost:3000

# Client Configuration
CLIENT_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760

# Security Configuration
ENABLE_REQUEST_VALIDATION=true
MAX_REQUEST_SIZE=52428800
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Development/Production Mode
NODE_ENV=development

# Optional: If you want to bind server to specific IP
# SERVER_HOST=0.0.0.0

# Optional: SSL/TLS Configuration (for HTTPS server)
# SSL_CERT_PATH=
# SSL_KEY_PATH=